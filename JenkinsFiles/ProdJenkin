pipeline {
    agent { label 'United_States' }
    environment {
        FTP_SERVER = credentials('abreu_fpt_host')
        FTP_USER = credentials('abreu_ftp_user')
        FTP_PASSWORD = credentials('abreu_ftp_password')
        FTP_PATH = 'Bidehan.abreuhd.com'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    doGenerateSubmoduleConfigurations: false,
                    extensions: [],
                    userRemoteConfigs: [[
                        url: 'https://github.com/AbreuHD/ProjectsDocs.git'
                    ]]
                ])
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build Docusaurus') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Deploy to FTP') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'abreu_ftp_credentials', usernameVariable: 'FTP_USER', passwordVariable: 'FTP_PASSWORD')]) {
                    sh """
                        curl -T build/* ftp://$FTP_SERVER/$FTP_PATH --user $FTP_USER:$FTP_PASSWORD
                    """
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline ejecutado exitosamente y archivos subidos por FTP.'
        }
        failure {
            echo 'Hubo un problema durante la ejecuci√≥n del pipeline.'
        }
    }
}